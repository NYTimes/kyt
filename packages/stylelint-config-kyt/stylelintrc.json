{
  "extends": "stylelint-config-standard",

  "rules": {
    "string-quotes": "single",
    "selector-max-id": 0,
    "property-no-unknown": [true, {
      "ignoreProperties": ["composes"]
    }],
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": ["export", "import", "global", "local"]
    }]
  }
}
